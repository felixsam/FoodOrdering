<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_customer_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/et_customer_name_field"
        app:layout_constraintTop_toBottomOf="@+id/et_customer_name_field" />

    <Button
        android:id="@+id/btn_customer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View "
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_customer_add"
        app:layout_constraintStart_toStartOf="@+id/et_customer_name_field" />

    <EditText
        android:id="@+id/et_customer_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="189dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_customer_AddName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="30dp"
        android:text="Add Name"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/et_customer_name_field"
        app:layout_constraintStart_toStartOf="@+id/et_customer_name_field" />
</androidx.constraintlayout.widget.ConstraintLayout>